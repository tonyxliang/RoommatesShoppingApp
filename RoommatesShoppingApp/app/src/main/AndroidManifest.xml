<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uga.cs.roommatesshoppingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoommatesShoppingApp">
        <activity android:name=".SettleCostActivity"></activity>
        <activity android:name=".UpdatePurchasedItemActivity" />
        <activity android:name=".ViewPurchasedListActivity" />
        <activity android:name=".UpdateItemActivity" />
        <activity android:name=".ItemRecyclerAdapter" />
        <activity android:name=".ViewListActivity" />
        <activity android:name=".AddItemActivity" />
        <activity android:name=".ManagementActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration" /> <!-- android:theme="@style/Theme.RoommatesShoppingApp.NoActionBar" /> -->
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>